<div id="signup">
    <h2>Signup</h2>
    <form action="/signup" method="POST">

        <label for="input-name">Full name</label>
        <input type="text" id="input-name" name="name" placeholder="Your full name" />

        <label for="input-email">Email</label>
        <input type="email" id="input-email" name="email" placeholder="Your email" value="{{email}}" />

        <label for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="********" />

        <label for="input-profession">Profession</labe>
        <input type="text" name="profession" id="input-profession" placeholder="your profession"/>

        <label for="input-description">Description</labe>
        <input type="text" name="description" id="input-description" placeholder="Tell us about you"/>

        <label for="input-skill">Skills</labe>
        <input type="text" name="skill" id="input-skill" placeholder="Your skills"/>

        <button type="submit">Create account</button>

        {{!-- error message will be added here --}}
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}

        {{#if validationError}}
        <p class="error">{{validationError}}</p>
        {{/if}}
    </form>
</div>