<div class="loginPage">
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-6 col-xl-5 mx-auto">
            <div class="card px-5 pt-4 d-flex justify-content-center">
                <form action="/login" method="POST" class="mydetails">
                    <div class="form-heading">
                        <p class="text-left">Already a member? </p>
                    </div>
                    <div class="form-group"><label class="form-control-placeholder" for="input-email">Enter Your Email Address</label><input type="email" class="form-control" name="email" required></div>
                    <div class="form-group"><label class="form-control-placeholder" for="password">Enter Your Password</label><input type="password" class="form-control" name="password" required></div>
                    
                    <div class="form-group pt-3">
                        <div class="row">
                            <div class="col-md-6"><button type="submit" class="btn btn-primary btn-block"><span>Login</span></button></div>
                        </div>
                    </div>

                    {{#if errorMessage}}
                        <p class="error">{{errorMessage}}</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-6 col-xl-5 mx-auto">
            <div class="card px-5 pt-4 d-flex justify-content-center">
                <form action="/signup" method="POST" enctype="multipart/form-data" class="mydetails">
                    <div class="form-heading">
                        <p class="text-left">Let's create your account</p>
                    </div>
                    
                        
                    <div class="form-group"><label class="form-control-placeholder" for="input-name">Full Name</label><input type="text" class="form-control" name="name" required></div>
                    <div class="form-group"><label class="form-control-placeholder" for="input-email">Email Address</label><input type="email" class="form-control" name="email" required></div>
                    <div class="form-group"><label class="form-control-placeholder" for="password">Enter a memorable password</label><input type="password" class="form-control" name="password" required></div>
                    <div class="form-group"><label class="form-control-placeholder" for="input-profession">Profession:</label><input type="text" class="form-control" name="profession" required></div>
                    <div class="form-group"><label class="form-control-placeholder" for="description">Skills:</label><input type="text" class="form-control" name="skill" required></div>
                    <div class="form-group"><label class="form-control-placeholder" for="description">Tell us about you:</label><textarea type="text" class="form-control" name="description" required></textarea></div>

                    <div class="custom-file"><label for="image-input">Upload Profile Picture:</label><input type="file" name="image" id="image-input" class="form-control-file" /></div>   

                    <div class="form-group pt-3">
                        <div class="row">
                            <div class="col-md-6"><button type="submit" class="btn btn-primary btn-block"><span>Join</span></button></div>
                        </div>
                    </div>


                    {{#if validationError}}
                      <p class="error">{{validationError}}</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
</div>
</div>