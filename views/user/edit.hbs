<div class="con">
<h1>Update User</h1>

<form action="/user/{{this._id}}" method="post">
  
  <label for="input-name">Full name</label>
  <input type="text" name="name" value={{this.name}}>

  <label for="input-email">Email</label>
  <input type="text" name="email" value={{this.email}}>

  <label for="input-profession">Profession</label>
  <input type="text" name="profession" value={{this.profession}}>

  <label for="input-description">Description</label>
  <input type="text" name="description" value={{this.description}}>

  <label for="input-skill">Skills</label>
  <input type="text-field" name="skill" value={{this.skill}}>

  <button type="submit">Update information</button>
 
</form>
</div>